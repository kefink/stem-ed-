# Backend environment variables

# App
APP_NAME=STEM-ED-ARCHITECTS API
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# Database
# Default to SQLite for local quick start; override to MySQL in real env
DATABASE_URL=sqlite+aiosqlite:///./app.db
# Example MySQL URL:
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/stemed

# Security
SECRET_KEY=change-this-in-prod
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# CORS
CORS_ORIGINS=http://localhost:3000

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# S3/R2 (optional)
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_REGION=
AWS_S3_BUCKET=