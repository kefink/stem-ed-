# Backend environment variables

# App
APP_NAME=STEM-ED-ARCHITECTS API
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# Database
# Default to SQLite for quick start; override to MySQL for real env.
# To use MySQL with async driver in the app (Alembic will auto-convert to sync):
# DATABASE_URL=mysql+aiomysql://stemed:stemed123@LAMPEIN:3306/stemeddb?charset=utf8mb4
# (Replace host with 127.0.0.1 or your server host as needed.)
DATABASE_URL=sqlite+aiosqlite:///./app.db

# Security
SECRET_KEY=change-this-in-prod
ACCESS_TOKEN_EXPIRE_MINUTES=60
    ALGORITHM=HS256

# Refresh tokens
# REFRESH_TOKEN_EXPIRE_DAYS=7

# Password policy (set to false to disable specific requirements)
# PASSWORD_MIN_LENGTH=8
# PASSWORD_REQUIRE_UPPERCASE=true
# PASSWORD_REQUIRE_LOWERCASE=true
# PASSWORD_REQUIRE_DIGIT=true
# PASSWORD_REQUIRE_SPECIAL=true

# Rate limiting
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_LOGIN_MAX_ATTEMPTS=5
# RATE_LIMIT_LOGIN_WINDOW_SECONDS=300

# Cookie sessions (optional - set to true to enable httpOnly cookies alongside JWT)
# COOKIE_SESSION_ENABLED=false
# COOKIE_NAME=stemed_session
# COOKIE_DOMAIN=  # Leave empty for localhost; set to ".yourdomain.com" for production
# COOKIE_SECURE=false  # Set true in production (requires HTTPS)
# COOKIE_SAMESITE=lax  # Options: lax, strict, none

# CORS (comma list or JSON-like list ["http://localhost:3000","http://127.0.0.1:3000"]) 
CORS_ORIGINS=http://localhost:3000

# Redis (optional - used for rate limiting if available)
REDIS_URL=redis://localhost:6379/0

# S3/R2 (optional)
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_REGION=
AWS_S3_BUCKET=

# SMTP (optional - email notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=no-reply@example.com
SMTP_TO=ops@example.com
SMTP_TLS=true